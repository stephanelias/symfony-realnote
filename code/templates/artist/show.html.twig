{% extends 'base.html.twig' %}

{% block title %}Artist{% endblock %}

{% block body %}
    <h1>Artist</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artist.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ artist.name }}</td>
            </tr>
            <tr>
                <th>Real_name</th>
                <td>{{ artist.realName }}</td>
            </tr>
            <tr>
                <th>Birth_date</th>
                <td>{{ artist.birthDate ? artist.birthDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ artist.summary }}</td>
            </tr>
        </tbody>
    </table>

    <div>
        Albums :
        {% for a in artist.albums %}
        {{ a.name }}
        {% endfor %}
    </div>

    <div>
        Apparitions :
        {% for f in artist.titles %}
        {{ f.name }}
        {% endfor %}
    </div>

    <a href="{{ path('app_artist_index') }}">back to list</a>

    <a href="{{ path('app_artist_edit', {'id': artist.id}) }}">edit</a>

    {{ include('artist/_delete_form.html.twig') }}
{% endblock %}
